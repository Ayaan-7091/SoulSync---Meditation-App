<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_bg"
    android:paddingTop="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/section_1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="20dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/andika"
                android:text="Good Morning User ,"
                android:textColor="@color/secondary"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/s_logo_1"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/section_1_2"
        android:layout_below="@id/section_1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/s_logo_2"

        />


    <LinearLayout
        android:id="@+id/section_2"
        android:layout_above="@id/section_3"
        android:layout_marginVertical="0dp"
        android:layout_marginHorizontal="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/section_1_2"
        android:padding="20dp"
        android:background="@drawable/quotes_card"


        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:background="#FF9800"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/quotes_title"
                        android:text="Start your day with some Positive Quotes"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/andika"
                        android:textSize="18sp"/>

                </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="1dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/quote_1"
                        android:layout_marginVertical="10dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The best way to capture moments is to pay attention. This is how we cultivate mindfulness. - Jon Kabat-Zinn"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="1dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/quote_2"
                        android:layout_marginVertical="10dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Within you there is a stillness and a sanctuary to which you can retreat at any time and be yourself - Hermann Hesse"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    />
                </androidx.cardview.widget.CardView>

            </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="1dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/quote_3"
                        android:layout_marginVertical="10dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Within you there is a stillness and a sanctuary to which you can retreat at any time and be yourself - Hermann Hesse"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    />
                </androidx.cardview.widget.CardView>

            </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="1dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/quote_4"
                        android:layout_marginVertical="10dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Within you there is a stillness and a sanctuary to which you can retreat at any time and be yourself - Hermann Hesse"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    />
                </androidx.cardview.widget.CardView>

            </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="1dp"
                    android:layout_marginVertical="5dp"
                    >
                    <TextView
                        android:id="@+id/quote_5"
                        android:layout_marginVertical="10dp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Within you there is a stillness and a sanctuary to which you can retreat at any time and be yourself - Hermann Hesse"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/section_3"
        android:elevation="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="20dp"
        app:cardCornerRadius="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/secondary">

        <LinearLayout
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            >


            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/meditation_2"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/notes_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/note_inactive"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/sleep_inactive"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>